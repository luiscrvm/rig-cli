# Example terraform.tfvars file for compute module
# Copy this to terraform.tfvars and customize for your environment

# Required: GCP Project Configuration
project_id = "xometrydevops-training"
region     = "us-central1"

# Environment Configuration
environment = "dev"

# Instance Configuration
instance_type  = "e2-medium"
instance_count = 2

# Network Configuration (use 'default' for default VPC)
vpc_id    = "default"
subnet_id = "default"

# Auto-scaling Configuration
enable_autoscaling = true
min_instances     = 1
max_instances     = 5

# Note: For production environments, consider:
# - Using a custom VPC instead of 'default'
# - Enabling autoscaling for better resource management
# - Using larger instance types (e2-standard-2, e2-standard-4)
# - Setting higher max_instances based on expected load